{
  "name": "blog",
  "version": "1.0.0",
  "scripts": {
    "dev": "next -p 3003",
    "rss": "node lib/rss",
    "new": "node lib/db",
    "build": "pnpm rss && next build && next-sitemap",
    "lint": "next lint",
    "fmt": "prettier --check \"{**/*,*}.{js,mjs,ts,jsx,tsx,md,json}\" --loglevel warn",
    "lint:fix": "pnpm lint --fix",
    "fmt:fix": "pnpm fmt --write",
    "fix": "pnpm run lint:fix && pnpm run fmt:fix",
    "find:unused": "next-unused"
  },
  "pre-commit": "lint",
  "license": "MIT",
  "dependencies": {
    "@reach/auto-id": "^0.18.0",
    "@reach/dialog": "^0.18.0",
    "classnames": "^2.5.1",
    "cmdk": "^0.0.4",
    "intersection-observer": "^0.7.0",
    "lodash.debounce": "^4.0.8",
    "marked-gfm-heading-id": "^3.1.3",
    "match-sorter": "^4.0.2",
    "next": "^12.3.4",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.0.8",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^8.24.2",
    "swr": "^0.2.3",
    "use-delayed-render": "^0.0.7"
  },
  "devDependencies": {
    "@types/body-scroll-lock": "^2.6.1",
    "@types/classnames": "^2.2.10",
    "@types/lodash.debounce": "^4.0.6",
    "@types/match-sorter": "^4.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.23",
    "@types/react-transition-group": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gray-matter": "^4.0.2",
    "lowdb": "^1.0.0",
    "marked": "^1.1.0",
    "next-unused": "^0.0.3",
    "open-graph-scraper": "^3.6.2",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-hover-media-feature": "^1.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "prism-react-renderer": "^1.1.1",
    "prompts": "^2.2.1",
    "rss": "^1.2.2",
    "typescript": "^5.4.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "next-unused": {
    "alias": {
      "@components": "components/",
      "@data": "data/",
      "@lib": "lib/",
      "@styles": "styles/"
    },
    "include": [
      "components",
      "lib"
    ]
  }
}
